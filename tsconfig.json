{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "lib",
		"module": "NodeNext",
		"target": "esnext",
		"moduleResolution": "NodeNext",
		"lib": [
			"esnext"
		],
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"skipLibCheck": true,
		"verbatimModuleSyntax": true
	}
}